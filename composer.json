{
    "name": "peak/peak",
    "description": "Peak Application with database and migration support",
    "keywords": ["peak", "framework", "app", "cli-app"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "peak/framework": "^3.0",
        "illuminate/database": "^5.6",
        "illuminate/events": "^5.6",
        "robmorgan/phinx": "0.10.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2"
    },
    "autoload": {
        "files": [
            "app/constants.php",
            "app/functions.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Cli\\": "cli/"
        }
    }
}
